<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include layout="@layout/common_layout_top_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/common_background_color"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/sp_16"
            android:gravity="center"
            android:text="股道"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/sp_16"
            android:text="T1-J1-01-0D657-U1"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tv_name"
            android:background="@drawable/fast_count_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_2"
            android:paddingEnd="@dimen/dp_4"
            android:paddingStart="@dimen/dp_4"
            android:paddingTop="@dimen/dp_2"
            android:textColor="#2183D3"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_num"
            android:layout_alignParentBottom="true"
            android:text="01时10分23秒"
            android:textColor="#ff0033"
            android:textSize="@dimen/sp_18" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_tv_carriage_a"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_4">

        <TextView
            android:id="@+id/tv_carriage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="01" />

        <TextView
            android:id="@+id/tv_carriage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="02" />

        <TextView
            android:id="@+id/tv_carriage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="03" />

        <TextView
            android:id="@+id/tv_carriage4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="04" />

        <TextView
            android:id="@+id/tv_carriage5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="05" />

        <TextView
            android:id="@+id/tv_carriage6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="06" />

        <TextView
            android:id="@+id/tv_carriage7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="07" />

        <TextView
            android:id="@+id/tv_carriage8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="08" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tv_carriage_b"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_4"
        android:visibility="gone">

        <TextView

            android:id="@+id/tv_carriage9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="09" />

        <TextView
            android:id="@+id/tv_carriage10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="10" />

        <TextView
            android:id="@+id/tv_carriage11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="11" />

        <TextView
            android:id="@+id/tv_carriage12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="12" />

        <TextView
            android:id="@+id/tv_carriage13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="13" />

        <TextView
            android:id="@+id/tv_carriage14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="14" />

        <TextView
            android:id="@+id/tv_carriage15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="15" />

        <TextView
            android:id="@+id/tv_carriage16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E2E8ED" />

    <include layout="@layout/common_layout_split_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/build_spinner_bg"
            android:textSize="@dimen/sp_22" />

        <ImageView
            android:id="@+id/iv_cookbook"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dp_12"
            android:paddingTop="@dimen/dp_12"
            android:src="@mipmap/app_ic_fast_node" />
    </LinearLayout>

    <include layout="@layout/common_layout_split_line_gray" />

    <TextView
        android:id="@+id/tv_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/fast_desc_bg"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_20" />

    <include layout="@layout/common_layout_split_line_gray" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_standard"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/app_ic_query_blue" />

            <RelativeLayout
                android:id="@+id/rl_cameraall"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/rl_camera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#D8D8D8">

                    <ImageView
                        android:id="@+id/iv_camera"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_40"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/app_ic_fast_camera" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:textColor="#7D7A7A"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/common_btn_blue_style"
        android:gravity="center"
        android:text="提交作业"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_18" />
</LinearLayout>