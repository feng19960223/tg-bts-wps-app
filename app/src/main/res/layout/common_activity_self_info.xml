<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF2F4"
    android:orientation="vertical">

    <include layout="@layout/tg_common_view_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:background="@drawable/common_background_color"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/info_iv_avatar"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:scaleType="centerCrop"
            android:src="@mipmap/common_avator_default" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_8"
                android:text="@string/label_realname"
                android:textColor="#494949"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/info_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_8"
                android:text="@string/common_blank"
                android:textColor="#595757"
                android:textSize="@dimen/sp_18" />
        </RelativeLayout>

        <include layout="@layout/common_layout_split_line_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_8"
                android:text="@string/label_cellphone"
                android:textColor="#494949"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/info_tv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_8"
                android:text="@string/common_blank"
                android:textColor="#595757"
                android:textSize="@dimen/sp_18" />
        </RelativeLayout>

        <include layout="@layout/common_layout_split_line_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_8"
                android:text="@string/label_email"
                android:textColor="#494949"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/info_tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_8"
                android:text="@string/common_blank"
                android:textColor="#595757"
                android:textSize="@dimen/sp_18" />
        </RelativeLayout>

        <include layout="@layout/common_layout_split_line_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_8"
                android:text="检修班组"
                android:textColor="#494949"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/info_tv_workGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_8"
                android:text="@string/common_blank"
                android:textColor="#595757"
                android:textSize="@dimen/sp_18" />
        </RelativeLayout>

        <include layout="@layout/common_layout_split_line_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_8"
                android:text="用户类型"
                android:textColor="#494949"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/info_tv_userType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_8"
                android:text="@string/common_blank"
                android:textColor="#595757"
                android:textSize="@dimen/sp_18" />
        </RelativeLayout>

        <include layout="@layout/common_layout_split_line_gray" />
    </LinearLayout>

    <Button
        android:id="@+id/updata_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/common_btn_blue_style"
        android:text="@string/label_chanage_pass"
        android:textColor="#EFF2F4"
        android:textSize="@dimen/sp_18" />

    <Button
        android:id="@+id/logoff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/common_btn_red_style"
        android:text="@string/label_logout"
        android:textColor="#EFF2F4"
        android:textSize="@dimen/sp_18" />
</LinearLayout>