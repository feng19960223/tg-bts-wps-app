<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/work_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_110"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/dp_4">

    <RelativeLayout
        android:layout_width="@dimen/dp_48"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_5"
        android:background="#B7DFF7"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/record_all_person_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/record_all_person_name"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/name_circle"
            android:text="1号"
            android:textColor="#4C8BBC"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/record_all_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_4"
            android:text="张三"
            android:textColor="#4C8BBC"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_weight="4"
        android:orientation="vertical"
        android:padding="@dimen/dp_4">

        <TextView
            android:id="@+id/record_all_gd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="股道："
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/record_all_gd_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/record_all_gd"
            android:layout_alignBottom="@+id/record_all_gd"
            android:layout_toEndOf="@+id/record_all_gd"
            android:text="1-1"
            android:textColor="#FFEA00"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/record_maintenance_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/record_all_gd"
            android:layout_marginTop="@dimen/dp_10"
            android:text="任务："
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/record_all_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/record_maintenance_task"
            android:layout_marginTop="@dimen/dp_10"
            android:text="开始："
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_weight="5"
        android:orientation="vertical"
        android:padding="@dimen/dp_4">

        <TextView
            android:id="@+id/record_all_train_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/record_maintenance_task_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/record_all_train_num"
            android:layout_marginTop="@dimen/dp_10"
            android:text="项目："
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/record_all_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/record_maintenance_task_item"
            android:layout_marginTop="@dimen/dp_10"
            android:text="结束："
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
</LinearLayout>