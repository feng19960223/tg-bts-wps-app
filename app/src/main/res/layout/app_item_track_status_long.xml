<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/app_query_state_item_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/free1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_16"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_35"
                android:text="空闲"
                android:textColor="#3C3F41"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_gd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/query_track_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="2px"
                android:text="G1" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#EDF0F3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_4">

            <RelativeLayout
                android:id="@+id/track_bg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/app_ic_query_blue"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/track_row_bg1"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/query_lw_nofree_bg"
                    android:gravity="center"
                    android:text="长编组"
                    android:textColor="#FFFFFF" />

                <RelativeLayout
                    android:id="@+id/isfree1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/track_row_bg1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/ch_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车号：" />

                    <TextView
                        android:id="@+id/train_set_code_num1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@id/ch_1"
                        android:text="12345" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ch_1"
                        android:layout_marginTop="@dimen/dp_12"
                        android:text="进站：" />

                    <TextView
                        android:id="@+id/arrive_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ch_1"
                        android:layout_marginTop="@dimen/dp_13"
                        android:layout_toRightOf="@+id/ch_1"
                        android:text="18:15:16" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>