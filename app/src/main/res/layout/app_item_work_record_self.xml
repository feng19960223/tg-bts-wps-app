<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/work_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="@dimen/dp_5"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/work_num"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_8"
        android:background="@drawable/circle_light_blue"
        android:gravity="center"
        android:text="1"
        android:textColor="#4C8BBC"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/record_gd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:text="股道："
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/record_track_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_toEndOf="@+id/record_gd"
            android:textColor="#FFEA00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/record_maintenance_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/record_gd"
            android:layout_marginTop="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/record_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/record_maintenance_task"
            android:layout_marginTop="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/record_train_set_code_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/record_maintenance_task_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/record_train_set_code_num"
            android:layout_marginTop="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/record_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/record_maintenance_task_item"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_work_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_16" />
</LinearLayout>