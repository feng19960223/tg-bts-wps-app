<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@mipmap/app_query_state_item_bg"
        android:orientation="vertical"
        android:padding="@dimen/dp_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/tv_gd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="股道："
                android:visibility="gone" />

            <TextView
                android:id="@+id/query_track_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_toEndOf="@+id/tv_gd"
                android:text="G1" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#EDF0F3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/track_bg1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_4"
                android:layout_weight="1"
                android:background="@mipmap/app_ic_query_blue">

                <TextView
                    android:id="@+id/track_row_bg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_4"
                    android:background="@drawable/query_lw_nofree_bg"
                    android:gravity="center"
                    android:paddingEnd="@dimen/dp_4"
                    android:paddingStart="@dimen/dp_4"
                    android:text="列位：1"
                    android:textColor="#FFFFFF" />

                <RelativeLayout
                    android:id="@+id/isfree1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/track_row_bg1"
                    android:layout_marginTop="@dimen/dp_4"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/ch_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车号：" />

                    <TextView
                        android:id="@+id/train_set_code_num1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@id/ch_1"
                        android:text="12345" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ch_1"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="进站：" />

                    <TextView
                        android:id="@+id/arrive_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ch_1"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_toEndOf="@+id/ch_1"
                        android:text="18:15:16" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/free1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_35"
                    android:text="空闲"
                    android:textColor="#3C3F41"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/track_bg2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_4"
                android:layout_weight="1"
                android:background="@mipmap/app_ic_query_green">

                <TextView
                    android:id="@+id/track_row_bg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_4"
                    android:background="@drawable/query_lw_free_bg"
                    android:gravity="center"
                    android:paddingEnd="@dimen/dp_4"
                    android:paddingStart="@dimen/dp_4"
                    android:text="列位：2"
                    android:textColor="#FFFFFF" />

                <RelativeLayout
                    android:id="@+id/isfree2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/track_row_bg2"
                    android:layout_marginTop="@dimen/dp_4"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/ch_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车号：" />

                    <TextView
                        android:id="@+id/train_set_code_num2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ch_2"
                        android:text="12345" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ch_2"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="进站：" />

                    <TextView
                        android:id="@+id/arrive_time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ch_2"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_toRightOf="@id/ch_2"
                        android:text="进站时间" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/free2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_35"
                    android:text="空闲"
                    android:textColor="#3C3F41"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>